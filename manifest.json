{
  "manifest_version": 3,
  "name": "SPARQLPrompt",
  "version": "0.7.1",
  "description": "Converts natural language to SPARQL using OpenAI.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://yasgui.triply.cc/*",
    "https://yasgui.org/*",
    "http://localhost:8080/yasgui.html",
    "https://frink-okn.github.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://yasgui.triply.cc/*",
        "https://yasgui.org/*",
        "http://localhost:8080/yasgui.html",
        "https://frink-okn.github.io/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/sparqlprompt_icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/highlight.min.js",
        "css/github.min.css",
        "js/pasteBridge.js"
      ],
      "matches": [
        "https://yasgui.triply.cc/*",
        "https://yasgui.org/*",
        "http://localhost:8080/*",
        "https://frink-okn.github.io/*"
      ]
    }
  ]
}